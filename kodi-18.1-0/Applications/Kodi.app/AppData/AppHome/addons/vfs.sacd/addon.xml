<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="vfs.sacd"
  version="1.0.0"
  name="SACD ISO support"
  provider-name="spiff">
  <requires>
<import addon="kodi.binary.global.main" version="1.0.14"/>
<import addon="kodi.binary.global.filesystem" version="1.0.2"/>
<import addon="kodi.binary.instance.vfs" version="2.0.0"/></requires>
  <extension
    point="kodi.vfs"
    protocols="sacd"
    extensions=".iso"
    files="true"
    directories="true"
    filedirectories="true"
    encodedhostname="true"
    library_ios="vfs.sacd.1.0.0.dylib" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">SACD ISO support</summary>
    <description lang="en">SACD ISO support</description>
    <platform>ios-aarch64</platform>
  </extension>
</addon>
