<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="imagedecoder.mpo"
  version="1.0.1"
  name="MPO image decoder"
  provider-name="spiff">
  <requires>
<import addon="kodi.binary.global.main" version="1.0.14"/>
<import addon="kodi.binary.instance.imagedecoder" version="2.0.0"/></requires>
  <extension
    point="kodi.imagedecoder"
    library_ios="imagedecoder.mpo.1.0.1.dylib"
    extension=".mpo"
    mimetype="image/mpo"/>
  <extension point="xbmc.addon.metadata">
    <summary>libmpo based image decoder</summary>
    <description>libmpo based image decoder</description>
    <platform>ios-aarch64</platform>
  </extension>
</addon>
