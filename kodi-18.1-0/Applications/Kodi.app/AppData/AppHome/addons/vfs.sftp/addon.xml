<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="vfs.sftp"
  version="1.0.1"
  name="SFTP support"
  provider-name="spiff">
  <requires>
<import addon="kodi.binary.global.main" version="1.0.14"/>
<import addon="kodi.binary.global.general" version="1.0.3"/>
<import addon="kodi.binary.instance.vfs" version="2.0.0"/></requires>
  <extension
    point="kodi.vfs"
    protocols="sftp|ssh"
    files="true"
    directories="true"
    supportDialog="true"
    supportPath="true"
    supportUsername="true"
    supportPassword="true"
    supportPort="true"
    supportBrowsing="false"
    defaultPort="22"
    type="sftp"
    label="20260"
    zeroconf="_sftp-ssh._tcp"
    library_ios="vfs.sftp.1.0.1.dylib"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">SFTP support</summary>
    <description lang="en">SFTP support</description>
    <platform>ios-aarch64</platform>
  </extension>
</addon>
